@model Trails4Health.Models.Trail

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutMembersArea.cshtml";
}


<div style="margin-top:40px">
    @if (Model.IsActivated == true)
    {
        <h3>Tem a certeza que pretende Desativar este trilho?</h3>
    }
    else
    {
        <h3>Tem a certeza que pretende Ativar este trilho?</h3>
    }
    
    <hr />
    <dl class="dl-horizontal">
        <input type="hidden" asp-for="TrailID" />
        <dt>
            Nome:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Duração:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Duration) Min
        </dd>
        <dt>
            Distância:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DistanceToTravel) Km
        </dd>
        <dt>
           Localização Inicial:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartLoc)
        </dd>
        <dt>
            Localização Final:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EndLoc)
        </dd>
        <dt>
            Epoca Aconselhada:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Season.SeasonName)
        </dd>
        <dt>
            Desnível:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Slope.Type)
        </dd>
        <dt>
            Está Ativo?:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IsActivated)
        </dd>
    </dl>
    
    <form asp-action="Delete" style="margin-left:15px">
        <div class="form-actions no-color">
            @if (Model.IsActivated == true) { 
            <input type="submit" value="Desativar" class="btn btn-danger" />
            }
            else{
            <input type="submit" value="Ativar" class="btn btn-danger" />
            }
            <a asp-action="Index" class="btn btn-primary" >Voltar ao Gestao de Trilhos</a>
        </div>
    </form>
</div>
