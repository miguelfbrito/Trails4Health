@model Trails4Health.Models.Trail

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutMembersArea.cshtml";
}


<form asp-action="Edit">
    <h6>Editar Trilho</h6>
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="TrailID" />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label">Nome:</label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Duration" class="col-md-2 control-label">Duração(Min):</label>
            <div class="col-md-10">
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DistanceToTravel" class="col-md-2 control-label">Distância(Km):</label>
            <div class="col-md-10">
                <input asp-for="DistanceToTravel" class="form-control" />
                <span asp-validation-for="DistanceToTravel" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StartLoc" class="col-md-2 control-label">Localização Inicial:</label>
            <div class="col-md-10">
                <input asp-for="StartLoc" class="form-control" />
                <span asp-validation-for="StartLoc" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EndLoc" class="col-md-2 control-label">Localização Final:</label>
            <div class="col-md-10">
                <input asp-for="EndLoc" class="form-control" />
                <span asp-validation-for="EndLoc" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="SeasonID" class="control-label col-md-2">Epoca Aconselhada:</label>
            <div class="col-md-10">
                <select asp-for="SeasonID" class="form-control" asp-items="ViewBag.SeasonID"></select>
                <span asp-validation-for="SeasonID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SlopeID" class="control-label col-md-2">Desnível:</label>
            <div class="col-md-10">
                <select asp-for="SlopeID" class="form-control" asp-items="ViewBag.SlopeID"></select>
                <span asp-validation-for="SlopeID" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="IsActivated" class="col-md-2 control-label">Está Ativo?:</label>
            <div class="col-md-10">
                <input asp-for="IsActivated" class="form-control" />
                <span asp-validation-for="IsActivated" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label">Descrição:</label>
            <div class="col-md-10">
                <textarea rows="4" cols="50" asp-for="Description" class="form-control"> Descrição do trilho</textarea>

                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <input type="hidden" asp-for="TrailImage" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-primary">Voltar ao Gestao de Trilhos </a>
            </div>
        </div>
    </div>
</form>

<div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
