@model Trails4Health.Models.Historic

@{
    ViewData["Title"] = "HistoricInformation";
    Layout = "~/Views/Shared/_LayoutMembersArea.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <h5>@Html.DisplayFor(model => model.Trail.Name)</h5> <!--Trail Name-->
            <br />

            <p style="font-weight: bold; font-size: 14px;">Detalhes do Utilizador</p>
            

            <div class="historic-information">

                <div class="col-md-4">
                    <div class="info-item">
                        <img src="~/images/feedback.png" width="85" height="85" />
                        <p>Agradável</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="info-item">
                        <img src="~/images/time.svg" width="85" height="85" />
                        <p>@Html.DisplayFor(model => model.TimeTaken) vs. @Html.DisplayFor(model => model.Trail.Duration) </p> <!--Time Tkane -->
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-item">
                        <img src="~/images/difficulty.png" width="85" height="85" />
                <p> @Html.DisplayFor(model => model.Difficulty.Level) vs. @Html.DisplayFor(model => model.Difficulty.Level)  </p>
                    </div>
                </div>

                <div class="col-md-12 text-align-left">
                    <p style="font-weight: bold; font-size: 14px; text-align: left;">Observações</p>
                    <p style="text-align: justify;
                              text-justify: inter-word;">
                        @Html.DisplayFor(model => model.Observations)
                        </p> <!--Observations-->
                </div>
                
            </div>
            
            
      
          
            <div class="historic-information-stages">
                <p style="font-weight: bold; font-size: 14px;">Etapas do Trilho</p>
                <br />
                <table class="table table-hover" id="dev-table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Nome</th>
                            <th>Local Inicio</th>
                            <th>Local Fim</th>
                            <th>Distância (km)</th>
                            <th>Duração (min)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>Etapa A</td>
                            <td>A</td>
                            <td>B</td>
                            <td>30</td>
                            <td>120</td>
                        </tr>
                        <tr>
                            <td>1</td>
                            <td>Etapa B</td>
                            <td>B</td>
                            <td>C</td>
                            <td>15</td>
                            <td>180</td>
                        </tr>

                    </tbody>
                </table>
            </div>




        </div>
    </div>
</div>