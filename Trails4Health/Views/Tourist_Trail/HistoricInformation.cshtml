@model Trails4Health.Models.ViewModels.Tourist_TrailInformationViewModel

@{
    ViewData["Title"] = "HistoricInformation";
    Layout = "~/Views/Shared/_LayoutMembersArea.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
                
            <h4 class="titles" style="text-align:left;">@Html.DisplayFor(model => model.Tourist_Trail.Trail.Name)</h4> <!--Trail Name-->
            <br />

            <p style="font-weight: bold; font-size: 14px;">Detalhes (Trilho vs Utilizador)</p>


            <div class="historic-information">

               @* <div class="col-md-4">
        <div class="info-item">
            <i class="icon-lg icon-color1"><img src="~/images/feedback.png" style="width:auto; height:85px; padding-top:15px;padding-left:6px;" /></i>
            <p>Agradável</p>
        </div>
    </div>*@

                <div class="col-md-4">
                    <div class="info-item">
                        <i class="icon-lg icon-color1"><img src="~/images/time.svg" style="width:auto; height:70px; padding-top:15px;padding-left:0px;" /></i>
                        <p>@Html.DisplayFor(model => model.Tourist_Trail.Duration) vs. @Html.DisplayFor(model => model.Tourist_Trail.Trail.Duration) </p> <!--Time Tkane -->
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-item">
                        <i class="icon-lg icon-color1"><img src="~/images/difficulty.png" style="width:auto; height:70px; padding-top:20px;padding-left:0px;" /></i>
                        <p> @*Html.DisplayFor(model => model.Historic.Trail.Difficulty.Level) *@vs. @Html.DisplayFor(model => model.Tourist_Trail.Difficulty.Level)  </p> <!-- TODO: atualizar com dificuldade etapas-->
                    </div>
                </div>

                <div class="col-md-12 text-align-left">
                    <p style="font-weight: bold; font-size: 14px; text-align: left;">Observações</p>
                    <p style="text-align: justify;
                              text-justify: inter-word;">
                        @Html.DisplayFor(model => model.Tourist_Trail.Observations)
                    </p> <!--Observations-->
                </div>

            </div>
            <div style="margin-top: 250px;"></div>
            <p style="font-weight: bold; font-size: 14px; float:left;">Etapas do Trilho</p>
            <div class="historic-information-stages">

                <br />

                @if (Model.Stages_Trail.Count() == 0)
                {
                    <p></p>
                    <p>Não existem etapas associadas a este trilho.</p>
                }
                else
                {


                    <table class="table table-hover" id="dev-table">
                        <thead>

                            <tr>
                                <th></th>
                                <th>Nome</th>
                                <th>Local Inicio</th>
                                <th>Local Fim</th>
                                <th>Distância (km)</th>
                                <th>Duração (min)</th>
                            </tr>
                        </thead>
                        <tbody>


                            @foreach (var item in Model.Stages_Trail)
                            {
                                <tr>
                                    <td></td>
                                    <td>@item.Stage.StageName</td>
                                    <td>@item.Stage.StageStartLoc</td>
                                    <td>@item.Stage.StageEndLoc</td>
                                    <td>30</td>
                                    <td>120</td>
                                </tr>
                            }



                        </tbody>
                    </table>
                }
            </div>





        </div>
    </div>
</div>